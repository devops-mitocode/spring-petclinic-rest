        //     }
        // }
        stage('Package') {
            steps {
                withCredentials([file(credentialsId: 'artifactory-settings', variable: 'M2_SETTINGS')]) {
                    sh 'env | sort'
                    sh 'mvn clean package -U -B -DskipTests -s ${M2_SETTINGS}'
                }
            }
        }
        stage('Nexus') {
            steps {
                script {

                    sh 'env | sort'

                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
        cleanup {
            cleanWs()
        }
    }
}